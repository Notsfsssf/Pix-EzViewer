<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Task">

        <ListPreference
            app:defaultValue="2"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="max_task_num"
            app:title="@string/max_task_num"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:defaultValue="2"
            app:entries="@array/reply_entries"
            app:entryValues="@array/reply_values"
            app:key="thread_num"
            app:title="@string/thread_num"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>
